{
	"name": "@qazzian/pixel-game-engine",
	"version": "0.1.0",
	"description": "Simple game engine inspired by OneLoneCoder",
	"main": "dist/index.js",
	"module": "esm/index.js",
	"types": "esm/index.d.ts",
	"files": [
		"dist",
		"esm",
		"src"
	],
	"type": "module",
	"scripts": {
		"prebuild": "npm run clean",
		"build:cjs": "tsc --module commonjs --outDir dist",
		"build:esm": "tsc --module esnext --outDir esm",
		"build": "npm run build:esm && npm run build:cjs",
		"build:watch": "tsc -w",
		"clean": "rimraf dist esm",
		"test": "jest",
		"test:watch": "jest --watch",
		"preversion": "build",
		"postVersion": "git push && git push --tags"
	},
	"author": "Qazzian",
	"license": "ISC",
	"devDependencies": {
		"@babel/preset-env": "^7.19.4",
		"@babel/preset-typescript": "^7.18.6",
		"@types/jest": "^29.5.13",
		"@types/random-seed": "^0.3.3",
		"jest": "^29.7.0",
		"rimraf": "^6.0.1",
		"ts-jest": "^29.2.5",
		"typescript": "^5.6.3"
	},
	"dependencies": {
		"random-seed": "^0.3.0"
	}
}
